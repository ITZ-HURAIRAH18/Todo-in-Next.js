model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String
  role      Role     @default(USER)
  todos     Todo[]
  createdAt DateTime @default(now())
}

model Todo {
  id        String   @id @default(uuid())
